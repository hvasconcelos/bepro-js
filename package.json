{
    "name": "bepro-js",
    "version": "2.0.0-alpha.1",
    "description": "",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "module": "dist/index.esm.js",
    "engines": {
        "node": "^14 || ^16"
    },
    "bin": {
        "abi-parser": "./tooling/abi-parser.js"
    },
    "files": [
        "dist",
        "src",
        "tooling"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bepronetwork/bepro-js.git"
    },
    "scripts": {
        "compile": "truffle compile",
        "prebuild": "npm run compile",
        "prepublishOnly": "npm run build",
        "test": "mocha --bail --timeout 60000 --exit --require ts-node/register --require tsconfig-paths/register 'test/**/*.spec.{ts,tsx}' --pretty",
        "postbuild": "tscpaths -p ./tsconfig.json -s ./src -o ./dist",
        "docs": "typedoc",
        "prepack": "tscpaths -p ./tsconfig.json -s ./src -o ./dist",
        "ganache:start": "ganache -p 8545 -q --account_keys_path keys.json ",
        "test-ci": "npm run ganache:start >/dev/null & npm run test",
        "eslint": "eslint --ignore-path .eslintignore --ext .ts ./src",
        "lint": "npm run eslint -- --quiet",
        "lint-fix": "npm run eslint -- --quiet --fix",
        "abi-parser": "node tooling/abi-parser.js",
        "truffle": "truffle",
        "contract-size": "truffle run contract-size",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "start": "tsdx watch",
        "build": "tsdx build"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^3.4.2",
        "@uniswap/v3-core": "^1.0.0",
        "@uniswap/v3-periphery": "^1.1.1",
        "accounting": "^0.4.1",
        "bignumber.js": "^9.0.2",
        "dotenv": "^8.2.0",
        "ipfs-http-client": "^50.1.2",
        "truffle-contract-size": "^2.0.1",
        "web3": "^1.6.1",
        "web3-eth": "^1.6.1",
        "web3-utils": "^1.6.1",
        "change-case": "^4.1.2"
    },
    "devDependencies": {
        "@size-limit/preset-small-lib": "^7.0.8",
        "@truffle/hdwallet-provider": "^2.0.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@types/yargs": "^17.0.7",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "chai": "^4.3.4",
        
        "date-fns": "^2.27.0",
        "eslint": "^8.8.0",
        "ganache": "^7.0.0-beta.2",
        "ganache-time-traveler": "^1.0.5",
        "husky": "^7.0.4",
        "mocha": "^9.1.3",
        "mocha-multi-reporters": "^1.5.1",
        "size-limit": "^7.0.8",
        "truffle": "^5.4.26",
        "truffle-assertions": "^0.8.2",
        "truffle-plugin-verify": "^0.5.8",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.5.0",
        "tsconfig-paths": "^3.12.0",
        "tscpaths": "^0.0.9",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.10",
        "typescript": "4.5.3",
        "yargs": "^17.3.0"
    },
    "author": "",
    "license": "ISC"
}
